  "users": [
    <%= print_json(data.objects['user'], :minimal=>true).indent(4) %>,
    <%= print_json(data.objects['user'], :minimal=>true, :include=>{'id'=>27384,'first_name'=>'Jennifer', 'last_name'=>'Parker', 'email'=>'jen.parker@example.com'}).indent(4) %>
